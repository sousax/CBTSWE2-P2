@model Models.Produto

@{
    ViewData["Title"] = "Criar Produto";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="col-12 col-md-8 col-lg-7">

        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white text-center">
                <h4 class="mb-0">Cadastro de Novo Produto</h4>
            </div>
            <div class="card-body">

                <form asp-action="Criar" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="IdUsuarioCadastro" />
                    <input type="hidden" asp-for="IdUsuarioUpdate" />

                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="form-label"></label>
                        <input asp-for="Nome" class="form-control form-control-lg" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Preco" class="form-label"></label>
                        <input asp-for="Preco" type="number" step="0.01" class="form-control form-control-lg" />
                        <span asp-validation-for="Preco" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check mb-4">
                        <input class="form-check-input" asp-for="Status" checked />
                        <label class="form-check-label" asp-for="Status">
                            @Html.DisplayNameFor(model => model.Status) (Ativo)
                        </label>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancelar</a>
                        <button type="submit" class="btn btn-success btn-lg">Criar Produto</button>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}